<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailMovieActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/a_nasi_timbel"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:text="Nasi Timbel"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_rating"
                android:layout_width="match_parent"
                android:text="Tutug Oncom"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_jadwal"
                android:layout_width="match_parent"
                android:text="Harga"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_deskripsil"
                android:layout_width="match_parent"
                android:text="nasi timbel dibungkus dengan daun pisang. Nasi yang digunakan pun jenis pulen.
                Biasanya Beras yang dipakai buat nasi timbel adalah jenis beras bagolo atau beras merah campuran."
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>